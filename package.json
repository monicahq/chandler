    "resources/**/*.{css,scss}": [
      "prettier --write --ignore-unknown"
    ],
    "*.php": [
      "php artisan ide-helper:models --nowrite",
      "./vendor/bin/pint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
